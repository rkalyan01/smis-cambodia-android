<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Use a simple AppCompat theme that will work with current dependencies -->
    <style name="Theme.Smis" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_light_primary</item>
        <item name="colorAccent">@color/md_theme_light_secondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>
</resources>