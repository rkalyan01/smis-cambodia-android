<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="secure_prefs"/>
        <exclude domain="database" path="user_sessions.db"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow specific data for device transfer -->
        <include domain="sharedpref" path="app_settings"/>
        <include domain="database" path="offline_data.db"/>
    </device-transfer>
</data-extraction-rules>